<nav class="pagination_corvus" role="navigation">
    {{#if prev}}
        <a class="newer-posts_corvus" href="{{page_url prev}}"><i class="fa fa-angle-left"></i><span>Newer Posts</span></a>
    {{/if}}
    <span class="page-number_corvus">Page {{page}} of {{pages}}</span>
    {{#if next}}
        <a class="older-posts_corvus" href="{{page_url next}}"><span>Older Posts</span><i class="fa fa-angle-right"></i></a>
    {{/if}}
</nav>